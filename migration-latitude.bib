@article{hagan1991,
  title = {The {{Relationship}} between {{Latitude}} and the {{Timing}} of {{Spring Migration}} of {{North American Landbirds}}},
  author = {Hagan, John M. and {Lloyd-Evans}, Trevor L. and Atwood, Jonathan L.},
  year = {1991},
  journal = {Ornis Scandinavica (Scandinavian Journal of Ornithology)},
  volume = {22},
  number = {2},
