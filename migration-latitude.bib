@article{youngflesh2021a,
  title = {Migratory Strategy Drives Species-Level Variation in Bird Sensitivity to Vegetation Green-Up},
  author = {Youngflesh, Casey and Socolar, Jacob and Amaral, Bruna R. and Arab, Ali and Guralnick, Robert P. and Hurlbert, Allen H. and LaFrance, Raphael and Mayor, Stephen J. and Miller, David A. W. and Tingley, Morgan W.},
